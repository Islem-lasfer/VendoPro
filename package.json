{
  "name": "VendoPro",
  "version": "1.0.0",
  "description": "Modern POS with Electron and React",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:react": "vite",
    "build": "vite build",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "rebuild:server": "cd database-server && npm install && cd .. && electron-rebuild -f -w better-sqlite3 -m ./database-server",
    "postinstall": "npm run rebuild && npm run rebuild:server",
    "preview": "vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --publish always"
  },
  "keywords": [
    "pos",
    "electron",
    "react",
    "point-of-sale"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "chart.js": "^4.4.1",
    "electron-pos-printer": "^1.3.6",
    "i18next": "^23.7.16",
    "jsbarcode": "^3.12.3",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "node-forge": "^1.3.3",
    "node-machine-id": "^1.1.12",
    "nodemailer": "^7.0.12",
    "puppeteer": "^24.36.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "react-router-dom": "^6.21.1",
    "serialport": "^13.0.0",
    "socket.io-client": "^4.8.3",
    "xlsx": "^0.18.5",
    "electron-updater": "^5.4.0",
    "electron-log": "^6.0.0"
  },
  "build": {
    "appId": "com.pos.system",
    "productName": "VendoPro",
    "asar": true,
    "asarUnpack": [
      "database-server/**/*",
      "electron/database/**/*"
    ],
    "files": [
      "dist/**/*",
      "main.js",
      "electron/**/*",
      "img/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "database-server",
        "to": "database-server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "img/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Islem-lasfer",
        "repo": "VendoPro"
      }
    ],
    "mac": {
      "target": ["dmg"],
      "icon": "img/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "img/icon.png"
    }
  }
}
